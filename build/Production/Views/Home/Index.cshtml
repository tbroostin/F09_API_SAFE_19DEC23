@model Ellucian.Colleague.Api.Models.ApiStatusModel
@{string style = Model.UnSuccessfulLoginCounter > 0 ? "color:Red; font-weight:bold;" : null;}

<div id="body">
    <section class="content-wrapper main-content clear-fix">
        @if (Request.IsLocal)
        {
            <fieldset>
                @if (Model.UseDasDataReader)
            {
                    @* Header/Title *@
                    <div class="esg-page-header">
                        <h2 class="esg-page-header__title header-margin">API Health Status</h2>
                    </div>

                    @* Field Set *@
                    <table class="APISettingstable">
                        <tr>
                            <td>
                                <label class="esg-form__label">Number of Unsuccessful DAS Logins: </label>
                                <label class="esg-form__label" style="@style">
                                    @Html.DisplayTextFor(model => model.UnSuccessfulLoginCounter)
                                </label>
                            </td>
                        </tr>
                    </table>
            }
            </fieldset><br />
            <div class="base">
                <span>Please visit <a href="http://xe.ellucian.com">xe.ellucian.com</a> for Colleague API documentation.</span>
            </div>
        }
    </section>
</div>